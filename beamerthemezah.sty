\setbeamercolor{separation line}{bg=black}
\setbeamercolor{title in headline}{fg=black}
\setbeamercolor{author in headline}{fg=black}
\setbeamercolor{institute in headline}{fg=UniRedOutline}

\setbeamercolor{framesubtitle}{fg=UniRedOutline, bg=UniSand}
\setbeamercolor{author in head/foot}{fg=UniRedOutline, bg=UniSand}
